<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    tools:context=".AddNote">

    <LinearLayout
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="586dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22">

        <TextView
            android:id="@+id/Entiti"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="#F1ECC6"
            android:backgroundTint="#F4E8C4"
            android:text="Home Display"
            android:textAlignment="center"
            android:textColor="#FFA500"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inEntiti"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#F1ECC6"
            android:backgroundTint="#F1ECC6"
            android:ems="10"
            android:hint="Enter your  home display"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#ECD9D9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textColor="#ECD9D9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="auto"
            android:foregroundTint="#FAFAFA"
            android:gravity="start|top"
            android:hint="Enter Content"
            android:inputType="textMultiLine" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            app:srcCompat="@android:drawable/ic_menu_save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>